{
  "version": 2,
  "buildCommand": "cd frontend && npm install && ./node_modules/vite/bin/vite.js build",
  "outputDirectory": "frontend/dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/src/server.ts"
    },
    { 
      "source": "/(.*)", 
      "destination": "/index.html" 
    }
  ]
}